#!/usr/bin/env bash
# Loadbalancer

sudo apt-get update -y

# Install HAProxy
sudo apt-get install -y haproxy

# Backup HAProxy config file
sudo cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.bak

# Configure HAProxy with round-robin and server hostnames
sudo tee /etc/haproxy/haproxy.cfg > /dev/null <<EOL
global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5s
    timeout client 50s
    timeout server 50s

frontend http_front
    bind *:80
    default_backend web_servers

backend web_servers
    balance roundrobin
    server 6475-web-01 54.161.60.25:80 check
    server 6475-web-02 3.86.91.179:80 check
EOL

# Restart HAProxy service using 'service' command
sudo service haproxy restart

# Enable HAProxy to start on boot
sudo systemctl enable haproxy

echo "HAProxy has been successfully installed and configured."
